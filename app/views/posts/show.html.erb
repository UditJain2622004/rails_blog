<div class="container">


<%= render @post %>

<div>
  <%= link_to "Edit ✏️", edit_post_path(@post), class:"btn btn-info" %> |
  <%= link_to "⬅️Back to posts", posts_path, class:"btn btn-info" %>

  <%# to destroy posts, it HAS to be a 'button_to' and with 'method: :delete' %>
  <%= button_to "Destroy this post", @post, method: :delete , class:"btn btn-danger"%>
</div>

</div>
<div class="container">
  <%= render 'comments/form', post:@post%>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', post: @post, comment: comment %>
  <% end %>
</div>